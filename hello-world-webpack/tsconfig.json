        "module": "commonjs",
        "target": "es6",
        "outDir": "lib",
        "sourceMap": true,
        "experimentalDecorators": true,
        "baseUrl": "src",
        "jsx": "react"
    },

    "exclude": [
        "node_modules",
        "*-test",
        "old",
        "out",
        "integrations",
        "examples"
